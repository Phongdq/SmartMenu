<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:f="urn:import:com.googlecode.mgwt.ui.client.widget.panel.flex"
	xmlns:h="urn:import:com.googlecode.mgwt.ui.client.widget.header"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:com.googlecode.mgwt.ui.client.widget.button">

	<ui:style>
	.headerLeft {
		background-color: #116388;
		width: 66.75%;
		height: 100%;
		vertical-align: center;
	}
	
	.headerRight {
		background-color: #242b3d;
		width: 33.25%;
		height: 100%;
	}
	
	.iconEMenu {
		width: auto;
		height: 100%;
		max-width: 100%;
		margin: auto;
		display: table-cell;
	}
	
	.buttonBar {
		width: 16.55%;
		height: 65%;
		background-color: #242b3d;
		color: white;
		font-size: 120%;
		font-weight: bold;
		text-align: center;
		vertical-align: middle;
		padding-top: 1%;
		cursor: pointer;
		border: 1px;
		border-style: solid;
		border-color: black;
	}
	
	.tbSearch {
		border-radius: 25px;
		border-style: double;
		border: 1px;
		border-color: gray;
		padding-left: 15px;
		font-size: 110%;
		font-weight: lighter;
		width: 28%;
		height: 70%;
		margin-left: auto;
		margin-bottom: auto;
		margin-top: auto;
		margin-right: 1%;
		text-transform: none;
	}
	</ui:style>
	<f:FlexPanel width="100%" height="100%" ui:field="parent">
		<h:HeaderPanel width="100%" height="9%">
			<f:FlexPanel ui:field="headerContentLeft" width="66.75%"
				height="100%">
			</f:FlexPanel>
			<f:FlexPanel styleName="{style.headerRight}">
				<g:Image styleName="{style.iconEMenu}" url="image/e_menu.png"></g:Image>
			</f:FlexPanel>
		</h:HeaderPanel>
		<f:FlexPanel ui:field="content" width="100%" height="91%">
			<f:FlexPanel ui:field="tabbar" width="100%" height="8%">
				<b:Button ui:field="btnProduct" styleName="{style.buttonBar}"></b:Button>
				<b:Button ui:field="btnMaterial" styleName="{style.buttonBar}"></b:Button>
				<b:Button ui:field="btnExpenses" styleName="{style.buttonBar}"></b:Button>
				<b:Button ui:field="btnOrder" styleName="{style.buttonBar}"></b:Button>
			</f:FlexPanel>
			<f:FlexPanel ui:field="tabcontent" width="100%" height="90%"></f:FlexPanel>
		</f:FlexPanel>
	</f:FlexPanel>
</ui:UiBinder> 