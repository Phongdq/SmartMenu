<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:f="urn:import:com.googlecode.mgwt.ui.client.widget.panel.flex"
	xmlns:b="urn:import:com.googlecode.mgwt.ui.client.widget.button">
	<ui:style>
	.icon {
		width: 80%;
		height: 80%;
		margin: auto;
		cursor: auto;
	}
	
	.icon:ACTIVE {
		background-color: rgba(150, 150, 150, 0.5);
	}
	
	.btn {
		background-color: transparent;
		width: 100%;
		height: 100%;
		margin-left: -100%;
		text-transform: none;
	}
	
	.btn:ACTIVE {
		background-color: rgba(150, 150, 150, 0.5);
	}
	</ui:style>
	<f:FlexPanel ui:field="parent">
		<g:Image ui:field="icon" styleName="{style.icon}"></g:Image>
		<b:Button ui:field="btn" styleName="{style.btn}"></b:Button>
	</f:FlexPanel>

</ui:UiBinder> 