<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:f="urn:import:com.googlecode.mgwt.ui.client.widget.panel.flex">
	<ui:style>
	.title {
		color: gray;
		font-size: 120%;
		margin-top: 5px;
		margin-left: 5px;
		font-weight: bold;text-transform: none;
	}
	
	.value {
		font-size: 180%;
		color: black;
		font-weight: bold;
		margin-top: 15px;
		margin-left: 20px;text-transform: none;
	}
	
	.unit {
		color: gray;
		font-size: 120%;
		margin-top: 15px;
		margin-left: 10px;
		font-weight: bold;
		text-align: justify;text-transform: none;
	}
	</ui:style>
	<f:FlexPanel ui:field="parent" width="100%">
		<g:Label ui:field="title" styleName="{style.title}"></g:Label>
		<f:FlexPanel ui:field="panelValue" width="100%" height="60%">
			<g:Label ui:field="value" styleName="{style.value}"></g:Label>
			<g:Label ui:field="unit" styleName="{style.unit"></g:Label>
		</f:FlexPanel>
	</f:FlexPanel>
</ui:UiBinder> 