<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:f="urn:import:com.googlecode.mgwt.ui.client.widget.panel.flex"
	xmlns:b="urn:import:com.googlecode.mgwt.ui.client.widget.button">
	<ui:style>
	.lbHeader {
		font-size: 150%;
		margin: auto;
		color: white;
		font-weight: bold;text-transform: none;
	}
	
	.lb {
		font-size: 130%;
		margin-top: 4%;
		margin-left: 3%;text-transform: none;
	}
	
	.lbAmount {
		font-size: 130%;
		margin-top: auto;
		margin-bottom: auto;
		margin-left: 3%;text-transform: none;
	}
	
	.tb {
		width: 30px;
		height: 30px;
		margin-top: auto;
		margin-bottom: auto;
		margin-right: auto;
		margin-left: 2%;
		text-align: center;
		font-size: 130%;text-transform: none;
	}
	
	.btnOk {
		font-size: 130%;
		width: 35%;
		height: 40px;
		margin: auto;
		border-radius: 4px;
		background-color: #fbb03b;
		text-align: center;
		padding-top: 10px;
		cursor: pointer;
		font-weight: bold;text-transform: none;
	}
	
	.btnCancel {
		font-size: 130%;
		width: 35%;
		height: 40px;
		margin: auto;
		border-radius: 4px;
		background-color: #c1272d;
		text-align: center;
		padding-top: 10px;
		cursor: pointer;
		font-weight: bold;text-transform: none;
	}
	</ui:style>
	<f:FlexPanel ui:field="parent" width="100%" height="100%">
		<f:FlexPanel ui:field="header" width="100%" height="10%">
			<g:Label ui:field="lbHeader" styleName="{style.lbHeader}"></g:Label>
		</f:FlexPanel>
		<f:FlexPanel ui:field="content" width="100%" height="70%">
			<g:Label ui:field="lbTitle" styleName="{style.lb}"></g:Label>
			<g:Label ui:field="lbPrice" styleName="{style.lb}"></g:Label>
			<f:FlexPanel ui:field="panelAmount" width="100%" height="20%">
				<g:Label ui:field="lbAmount" styleName="{style.lbAmount}"></g:Label>
				<g:TextBox ui:field="tbAmount" styleName="{style.tb}"></g:TextBox>
			</f:FlexPanel>
		</f:FlexPanel>
		<f:FlexPanel ui:field="panelButton" width="100%" height="20%">
			<b:Button ui:field="btnAdd" styleName="{style.btnOk}" important="true"></b:Button>
			<b:Button ui:field="btnCancel" styleName="{style.btnCancel}" important="true"></b:Button>
		</f:FlexPanel>
	</f:FlexPanel>
</ui:UiBinder> 