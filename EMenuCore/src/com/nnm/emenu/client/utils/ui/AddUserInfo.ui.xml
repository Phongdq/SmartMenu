<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:f="urn:import:com.googlecode.mgwt.ui.client.widget.panel.flex"
	xmlns:b="urn:import:com.googlecode.mgwt.ui.client.widget.button">
	<ui:style>
	.title {
		color: #116388;
		font-size: 130%;
		font-weight: bold;
		margin: auto;
		text-align: center;
		text-transform: none;
	}
	
	.lb {
		color: black;
		font-size: 110%;
		text-align: center;
		margin: auto;
		font-weight: bold;
		text-transform: none;
	}
	
	.tb {
		margin: auto;
		border: 1px;
		border-color: #333333;
		border-style: solid;
		padding-left: 10px;
		font-size: 110%;
		text-transform: none;
	}
	
	.ltb {
		margin: auto;
		border: 1px;
		border-color: #333333;
		border-style: solid;
		padding-left: 10px;
		font-size: 110%;
		text-transform: none;
	}
	
	.btnAdd {
		width: 40%;
		height: 50%;
		margin: auto;
		font-size: 110%;
		font-weight: bold;
		background-color: #3CB371;
		padding-top: 1%;
		text-align: center;
		cursor: pointer;
		text-transform: none;
	}
	</ui:style>
	<f:FlexPanel ui:field="parent" width="100%" height="100%">
		<f:FlexPanel ui:field="header" width="100%" height="10%">
			<g:Label ui:field="title" styleName="{style.title}"></g:Label>
		</f:FlexPanel>
		<f:FlexPanel ui:field="content" width="100%" height="80%">
			<f:FlexPanel ui:field="panelName" width="100%" height="22%">
				<g:Label ui:field="lbName" width="30%" styleName="{style.lb}"></g:Label>
				<g:TextBox ui:field="tbName" width="50%" height="70%"
					styleName="{style.tb}"></g:TextBox>
			</f:FlexPanel>
			<f:FlexPanel ui:field="panelUserName" width="100%"
				height="22%">
				<g:Label ui:field="lbUserName" width="30%" styleName="{style.lb}"></g:Label>
				<g:TextBox ui:field="tbUserName" width="50%" height="70%"
					styleName="{style.tb}"></g:TextBox>
			</f:FlexPanel>
			<f:FlexPanel ui:field="panelPassWord" width="100%"
				height="22%">
				<g:Label ui:field="lbPassWord" width="30%" styleName="{style.lb}"></g:Label>
				<g:TextBox ui:field="tbPassWord" width="50%" height="70%"
					styleName="{style.tb}"></g:TextBox>
			</f:FlexPanel>
			<f:FlexPanel ui:field="panelRole" width="100%" height="22%">
				<g:Label ui:field="lbRole" width="30%" styleName="{style.lb}"></g:Label>
				<g:ListBox ui:field="ltbRole" width="51%" height="70%"
					styleName="{style.ltb}"></g:ListBox>
			</f:FlexPanel>
		</f:FlexPanel>
		<f:FlexPanel ui:field="footer" width="100%" height="15%">
			<b:Button ui:field="btnAdd" styleName="{style.btnAdd}"></b:Button>
		</f:FlexPanel>
	</f:FlexPanel>
</ui:UiBinder> 