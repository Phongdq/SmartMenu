<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:f="urn:import:com.googlecode.mgwt.ui.client.widget.panel.flex"
	xmlns:b="urn:import:com.googlecode.mgwt.ui.client.widget.button">
	<ui:style>
	.text {
		font-size: 90%;
		color: black;
		text-align: center;
		margin-left: 6px;
		margin-right: 1px;
		font-weight: lighter;
		margin-top: 5px;
		font: Roboto, lighter;text-transform: none;
	}
	
	.btn {
		color: red;
		text-align: center;
		font-size: 120%;
		margin: auto;
		cursor: pointer;
		margin-top: 1%;text-transform: none;
	}
	</ui:style>
	<f:FlexPanel width="100%" height="40px" ui:field="orderItem">
		<b:Button ui:field="btnCancel" styleName="{style.btn}" text="x"
			width="2%" height="100%"></b:Button>
		<g:Label ui:field="lbTitle" styleName="{style.text}" width="32%"
			height="100%"></g:Label>
		<g:Label ui:field="lbAmount" styleName="{style.text}" width="18%"
			height="100%"></g:Label>
		<f:FlexPanel ui:field="containerButton" width="45%"
			height="100%"></f:FlexPanel>
	</f:FlexPanel>
</ui:UiBinder> 