<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:f="urn:import:com.googlecode.mgwt.ui.client.widget.panel.flex"
	xmlns:b="urn:import:com.googlecode.mgwt.ui.client.widget.button">
	<ui:style>
	.title {
		text-shadow: 4px 3px 6px rgba(133, 181, 252, 0.98);
		font-size: 350%;
		color: #3172D4;
		font-family: Audiowide;
		text-align: center;
		width: 100%;
		margin-top: 6%;
	}
	
	.textbox {
		width: 80%;
		height: 10%;
		min-height: 40px;
		max-height: 70px;
		border: solid 1px #85B5FC;
		padding-left: 10px;
		border-radius: 10px;
		margin-left: 10%;
		margin-top: 2%;
		font-size: 150%;
		background-color: #FFFFFF;
		outline: none;
		color: #474747;
		text-align: left;
	}
	
	.textbox:hover {
		border: 1px solid #4548FF;
		padding-left: 10px;
		border-radius: 10px;
	}
	
	.textbox:focus {
		border: solid 1px #005DDE;
		padding-left: 10px;
		border-radius: 10px;
		box-shadow: inset 0px 1px 2px 0px #9C9C9C;
	}
	
	.textbox:active {
		border: solid 1px #117DDB;
		padding-left: 10px;
		border-radius: 5px;
	}
	
	.button {
		width: 81%;
		height: 8%;
		min-height: 30px;
		max-height: 55px;
		padding-top: 10px;
		margin-left: 10%;
		margin-top: 4%;
		text-align: center;
		font-size: 150%;
		font-family: Arial;
		font-weight: normal;
		border-radius: 8px 8px 8px 8px;
		border: 1px solid #84bbf3;
		cursor: pointer;
		color: #ffffff;
		background-color: #317277;
	}
	
	</ui:style>
	<f:FlexPanel ui:field="parent" width="100%" height="100%">
		<g:Label ui:field="title" styleName="{style.title}"></g:Label>
		<g:TextBox ui:field="tbUserName" styleName="{style.textbox}"></g:TextBox>
		<g:PasswordTextBox ui:field="tbPassWord" styleName="{style.textbox}"></g:PasswordTextBox>
		<b:Button ui:field="btnLogin" styleName="{style.button}" important="true"></b:Button>
	</f:FlexPanel>
</ui:UiBinder> 