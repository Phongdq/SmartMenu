<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:f="urn:import:com.googlecode.mgwt.ui.client.widget.panel.flex"
	xmlns:b="urn:import:com.googlecode.mgwt.ui.client.widget.button"
	<!-- xmlns:a="urn:import:com.google.gwt.dev.asm"-->
	>
	<ui:style>
	.title {
		color: #116388;
		font-size: 130%;
		font-weight: bold;
		margin: auto;
		text-align: center;
		text-transform: none;
	}
	
	.btnClose {
		width: 2%;
		margin-bottom: auto;
		margin-top: auto;
		margin-right: 1%;
		color: red;
		font-size: 140%;
	}
	
	.image {
		margin: auto;
	}
	
	.lbImage {
		text-align: center;
		color: black;
		font-size: 120%;
		font-weight: bold;
		margin-left: auto;
		margin-right: auto;
		margin-bottom: 2%;
		text-transform: none;
	}
	
	.lbCode {
		color: black;
		font-size: 110%;
		text-align: center;
		margin: auto;
		font-weight: bold;
		text-transform: none;
	}
	
	.tb {
		margin: auto;
		border: 1px;
		border-color: #333333;
		border-style: solid;
		padding-left: 10px;
		font-size: 110%;
		text-transform: none;
	}
	
	.btnInfo {
		border: 1px;
		border-color: black;
		border-style: solid;
		width: 12%;
		height: 50%;
		padding-top: 1%;
		text-align: center;
		font-size: 110%;
		font-weight: bold;
		margin-top: auto;
		margin-bottom: 0px;
		cursor: pointer;
		text-transform: none;
	}
	
	.btnSave {
		width: 20%;
		height: 50%;
		margin: auto;
		font-size: 110%;
		font-weight: bold;
		background-color: #3CB371;
		padding-top: 1%;
		text-align: center;
		cursor: pointer;
		text-transform: none;
	}
	
	.lbInfo {
		font-size: 110%;
		color: black;
		font-weight: lighter;
		margin: auto;
		text-align: center;
		width: 30%;
		text-transform: none;
	}
	
	.tbInfo {
		width: 50%;
		height: 70%;
		margin: auto;
		font-size: 110%;
		color: black;
		padding-left: 10px;
		text-transform: none;
	}
	
	.ltb {
		margin: auto;
		text-transform: none;
	}
	
	.lbDes {
		font-size: 110%;
		color: black;
		font-weight: lighter;
		margin-top: 4%;
		text-align: center;
		width: 25%;
		text-transform: none;
	}
	
	.taInfo {
		width: 70%;
		height: 85%;
		margin: auto;
		font-size: 110%;
		color: black;
		padding-left: 10px;
		padding-top: 5px;
		text-transform: none;
	}
	</ui:style>
	<f:FlexPanel ui:field="parent" width="100%" height="100%">
		<f:FlexPanel ui:field="header" width="100%" height="10%">
			<g:Label ui:field="title" styleName="{style.title}"></g:Label>
		</f:FlexPanel>
		<f:FlexPanel ui:field="content1" width="100%" height="38%">
			<f:FlexPanel ui:field="content11">
				<g:Image ui:field="image" width="50%" height="50%"
					styleName="{style.image}"></g:Image>
				<g:Label ui:field="lbImage" styleName="{style.lbImage}"></g:Label>
			</f:FlexPanel>
			<f:FlexPanel ui:field="content12" height="100%">
				<f:FlexPanel ui:field="panelCode" width="100%" height="18%">
					<g:Label ui:field="lbCode" width="35%" styleName="{style.lbCode}"></g:Label>
					<g:TextBox ui:field="tbCode" width="50%" height="80%"
						styleName="{style.tb}"></g:TextBox>
				</f:FlexPanel>
				<f:FlexPanel ui:field="panelName" width="100%" height="18%">
					<g:Label ui:field="lbName" width="35%" styleName="{style.lbCode}"></g:Label>
					<g:TextBox ui:field="tbName" width="50%" height="80%"
						styleName="{style.tb}"></g:TextBox>
				</f:FlexPanel>
				<f:FlexPanel ui:field="panelPrice" width="100%" height="18%">
					<g:Label ui:field="lbPrice" width="35%" styleName="{style.lbCode}"></g:Label>
					<g:TextBox ui:field="tbPrice" width="50%" height="80%"
						styleName="{style.tb}"></g:TextBox>
				</f:FlexPanel>
				<f:FlexPanel ui:field="panelCategory" width="100%"
					height="18%">
					<g:Label ui:field="lbCategory" width="35%" styleName="{style.lbCode}"></g:Label>
					<g:ListBox ui:field="ltbCategory" width="52%" height="80%"
						styleName="{style.ltb}"></g:ListBox>
				</f:FlexPanel>
				<f:FlexPanel ui:field="panelUnit" width="100%" height="18%">
					<g:Label ui:field="lbUnit" width="35%" styleName="{style.lbCode}"></g:Label>
					<g:TextBox ui:field="tbUnit" width="50%" height="80%"
						styleName="{style.tb}"></g:TextBox>
				</f:FlexPanel>
			</f:FlexPanel>
		</f:FlexPanel>
		<f:FlexPanel ui:field="content2" width="100%" height="8%">
			<b:Button ui:field="btnInfo" styleName="{style.btnInfo}"></b:Button>
			<b:Button ui:field="btnConvert" styleName="{style.btnInfo}"></b:Button>
		</f:FlexPanel>
		<f:FlexPanel ui:field="content3" width="100%" height="35%">
			<f:FlexPanel ui:field="contentInfo" width="100%" height="100%">
				<f:FlexPanel ui:field="contentInfo1" width="50%" height="100%">
					<f:FlexPanel ui:field="panelPriceInfo" width="100%"
						height="20%">
						<g:Label ui:field="lbPriceInfo" styleName="{style.lbInfo}"></g:Label>
						<g:TextBox ui:field="tbPriceInfo" styleName="{style.tbInfo}"></g:TextBox>
					</f:FlexPanel>
					<f:FlexPanel ui:field="panelProducerInfo" width="100%"
						height="20%">
						<g:Label ui:field="lbProducerInfo" styleName="{style.lbInfo}"></g:Label>
						<g:TextBox ui:field="tbProducerInfo" styleName="{style.tbInfo}"></g:TextBox>
					</f:FlexPanel>
				</f:FlexPanel>
				<f:FlexPanel ui:field="contentInfo2" width="50%" height="100%">
					<g:Label ui:field="lbDes" styleName="{style.lbDes}"></g:Label>
					<g:TextArea ui:field="taDes" styleName="{style.taInfo}"></g:TextArea>
				</f:FlexPanel>
			</f:FlexPanel>
			<f:FlexPanel ui:field="contentConvert" width="100%"
				height="100%"></f:FlexPanel>
		</f:FlexPanel>
		<f:FlexPanel ui:field="content4" width="100%" height="9%">
			<b:Button ui:field="btnSave" styleName="{style.btnSave}"></b:Button>
			<b:Button ui:field="btnSaveAndNew" styleName="{style.btnSave}"></b:Button>
		</f:FlexPanel>
	</f:FlexPanel>
</ui:UiBinder> 