<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:f="urn:import:com.googlecode.mgwt.ui.client.widget.panel.flex">
	<ui:style>
	.imgFood {
		width: 70%;
		height: 50%;
		border: 1px;
		border-style: dashed;
		border-color: gray;
		margin-top: 5%;
		margin-left: auto;
		margin-right: auto;
		padding: 2%;
		size: portrait;
	}
	
	.titleFood {
		font-size: 120%;
		font-weight: bold;
		color: #116388;
		text-align: center;
		margin-top: 10%;
		margin-left: auto;
		margin-right: auto;
		margin-bottom: auto;text-transform: none;
	}
	</ui:style>
	<f:FlexPanel width="33%" height="100%">
		<g:Image ui:field="imgFood" styleName="{style.imgFood}"></g:Image>
		<g:Label ui:field="titleFood" styleName="{style.titleFood}"></g:Label>
	</f:FlexPanel>
</ui:UiBinder> 