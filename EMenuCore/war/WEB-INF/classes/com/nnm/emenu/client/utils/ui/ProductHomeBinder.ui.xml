<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:f="urn:import:com.googlecode.mgwt.ui.client.widget.panel.flex"
	xmlns:b="urn:import:com.googlecode.mgwt.ui.client.widget.button"
	xmlns:s="urn:import:com.googlecode.mgwt.ui.client.widget.panel.scroll">
	<ui:style>
	.btn {
		border: 2px;
		border-style: solid;
		border-color: graytext;
		border-radius: 5px;
		width: 20%;
		height: 70%;
		margin-top: 20%;
		font-size: 120%;
		color: black;
		text-align: center;
		margin: 1%;
		padding-top: 1%;
		background-color: #EEEEEE;
		cursor: pointer;
		text-transform: none;
	}
	
	.btn:ACTIVE {
		background-color: #CCCCCC;
	}
	</ui:style>
	<f:FlexPanel ui:field="parent" width="100%" height="100%">
		<f:FlexPanel ui:field="top" width="100%" height="8%">
			<b:Button ui:field="btnProduct" styleName="{style.btn}"></b:Button>
			<b:Button ui:field="btnCategory" styleName="{style.btn}"></b:Button>
		</f:FlexPanel>
		<f:FlexPanel ui:field="content" width="100%" height="92%">
			<s:ScrollPanel ui:field="scroll" width="100%" height="96%">
				<f:FlexPanel ui:field="scrollContent" width="100%"></f:FlexPanel>
			</s:ScrollPanel>
		</f:FlexPanel>
	</f:FlexPanel>

</ui:UiBinder> 