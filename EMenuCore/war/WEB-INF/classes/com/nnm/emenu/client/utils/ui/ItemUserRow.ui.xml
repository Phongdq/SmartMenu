<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:f="urn:import:com.googlecode.mgwt.ui.client.widget.panel.flex"
	xmlns:b="urn:import:com.googlecode.mgwt.ui.client.widget.button">
	<ui:style>
	.lb {
		text-align: center;
		color: black;
		font-size: 120%;
		font-weight: lighter;
		margin: auto;
		vertical-align: middle;text-transform: none;
	}
	
	.panel {
		border-bottom: 1px;
		border-bottom-color: black;
		border-bottom-style: solid;
		border-left: 1px;
		border-left-color: black;
		border-left-style: solid;
		border-top: 1px;
		border-top-color: black;
		border-top-style: solid;
		display: inline-block;
	}
	
	.btnEdit {
		width: 40%;
		height: 50%;
		margin-left: 5%;
		margin-top: 25%;
		background-position: center;
	}
	
	.btnDelete {
		width: 40%;
		height: 50%;
		margin-left: auto;
		margin-right: 5%;
		margin-top: 25%;
		background-position: center;
	}
	</ui:style>
	<f:FlexPanel ui:field="parent" width="100%" height="80px">
		<f:FlexPanel ui:field="panelStt" width="5%" height="100%">
			<g:Label ui:field="lbSTT" styleName="{style.lb}"></g:Label>
		</f:FlexPanel>
		<f:FlexPanel ui:field="panelName" width="15%" height="100%">
			<g:Label ui:field="lbName" styleName="{style.lb}"></g:Label>
		</f:FlexPanel>
		<f:FlexPanel ui:field="panelUserName" width="13%" height="100%">
			<g:Label ui:field="lbUserName" styleName="{style.lb}"></g:Label>
		</f:FlexPanel>
		<f:FlexPanel ui:field="panelPassWord" width="13%" height="100%">
			<g:Label ui:field="lbPassWord" styleName="{style.lb}"></g:Label>
		</f:FlexPanel>
		<f:FlexPanel ui:field="panelRole" width="13%" height="100%">
			<g:Label ui:field="lbRole" styleName="{style.lb}"></g:Label>
		</f:FlexPanel>
		<f:FlexPanel ui:field="panelState" width="13%" height="100%">
			<g:Label ui:field="lbState" styleName="{style.lb}"></g:Label>
		</f:FlexPanel>
		<f:FlexPanel ui:field="panelNote" width="23%" height="100%">
		</f:FlexPanel>
	</f:FlexPanel>
</ui:UiBinder> 